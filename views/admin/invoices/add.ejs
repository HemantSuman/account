  function addMoreItems(){
    let itemIndexValue = parseInt($('.itemIndexValue').val()) + 1;
    $('.itemIndexValue').val(itemIndexValue);
    let selectOptions = $('.selectItem').html();
    let selectHtml = "<select name='item["+itemIndexValue+"][item]' class='form-control select2'>"+selectOptions+"</select>";
    let itemHtml = "<div class='row itemRow'><div class='col-sm-2'><div class='form-group'><label for=''>Item</label>"+selectHtml+"<div class='item-error-message error-message'></div></div></div><div class='col-sm-2'><div class='form-group'><label for=''>Description</label><input name='item["+itemIndexValue+"][description]' type='text' class='form-control' id='' placeholder=''><div class='description-error-message error-message'></div></div></div><div class='col-sm-2'><div class='form-group'><label for=''>No. of pkg</label><input name='item["+itemIndexValue+"][no_package]' type='text' class='form-control' id='' placeholder=''><div class='no_package-error-message error-message'></div></div></div><div class='col-sm-1'><div class='form-group'><label for=''>Unit</label><input name='item["+itemIndexValue+"][unit]' type='text' class='form-control' id='' placeholder=''><div class='unit-error-message error-message'></div></div></div><div class='col-sm-1'><div class='form-group'><label for=''>Quantity</label><input name='item["+itemIndexValue+"][quantity]' type='text' class='form-control' id='' placeholder=''><div class='quantity-error-message error-message'></div></div></div><div class='col-sm-1'><div class='form-group'><label for=''>Rate</label><input name='item["+itemIndexValue+"][rate]' type='text' class='form-control' id='' placeholder=''><div class='rate-error-message error-message'></div></div></div><div class='col-sm-1'><div class='form-group'><label for=''>Per</label><input name='item["+itemIndexValue+"][per]' type='text' class='form-control' id='' placeholder=''><div class='per-error-message error-message'></div></div></div><div class='col-sm-1'><div class='form-group'><label for=''>Amount</label><input name='item["+itemIndexValue+"][item_amount]' type='text' class='form-control' id='' placeholder=''><div class='item_amount-error-message error-message'></div></div></div><div class='col-sm-2 ' style='display: flex;align-items: center;'><button onclick='removeItems(this)' type='button' class='btn btn-danger float-right'><i class='fas fa-times'></i> remove item</button></div></div>";
    $('.itemDiv').append(itemHtml);
    $(".select2").each(function() {
      $(this).select2();
    });
  }

  function removeItems(thisVar){
    console.log(thisVar);
    $(thisVar).parents('.itemRow').remove();
  }
    
  $(document).ready(function() {
    // $.notify(data.message, { className:"success",position:"bottom right" });
    
    var formId = 'formId';
    $(document).on('click', '.submitBtn', function(){
      
      $('.error-message').html('');
      $('#'+formId).validate({
        rules: {
          title: {
            // required: true,
          }
        },
        messages: {
          title: {
            required: "This field is required!",
          },
        },
        errorElement: 'span',
        errorPlacement: function (error, element) {
          error.addClass('invalid-feedback');
          element.closest('.form-group').append(error);
        },
        highlight: function (element, errorClass, validClass) {
          $(element).addClass('is-invalid');
        },
        unhighlight: function (element, errorClass, validClass) {
          $(element).removeClass('is-invalid');
        },
        submitHandler: function(form) {
          
          var form = $('#'+formId);
          errorFieldObj = [];
          $.ajax({
            url: $('#'+formId).attr('action'),
            type: 'POST',
            dataType: "json",
            data: new FormData(form[0]),
            processData: false,
            contentType: false,
            cache: false,
            success: function (data, status)
            {
              if (data.status) {
                window.location.href = data.url;
              }
            },
            error: function (xhr, desc, err)
            {
              console.log('val')
              xhr.responseJSON.data.map(function(val){
                console.log(val)
                if(!errorFieldObj.includes(val.path)){
                  
                  $('.'+val.path+'-error-message').html(val.message)
                  errorFieldObj.push(val.path)
                }
              })

            }
          })
        }
      });
    });
  });
</script>