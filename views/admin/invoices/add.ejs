  function addMoreItems(){
    emptyItemErrors();

    let selectItem = $('.item_item_id_').val();
    let itemDescription = $('.itemDescription').val();
    let itemNoOfPkt = $('.itemNoOfPkt').val();
    let itemUnit = $('.itemUnit').val();
    let itemQuantity = $('.itemQuantity').val();
    let itemRate = $('.itemRate').val();
    let itemPer = $('.itemPer').val();
    let itemAmount = $('.itemAmount').val();
    let valid = validateItems();

    if(valid){
      let itemIndexValue = parseInt($('.itemIndexValue').val()) + 1;
      $('.itemIndexValue').val(itemIndexValue); 
      
      let itemsObj = JSON.parse($("#itemsObj").html());
      let itemOptions = "";
      let selectedValue1 = "";
      itemsObj.map(function(data) {
        let selected = "";
        if(data.id == selectItem){
          selected = "selected";
          selectedValue1 = data.id;
        }
        itemOptions += "<option " + selected + " value='"+ data.id +"'>"+data.item_name+"</option>";
      });

      let subItemOptions = "";
      let selectedValue2 = "";
      $(".selectSubItem  option").each(function(){
        let selectedSubItem = "";
        if(this.value == $(".selectSubItem").val()){
          selectedSubItem = "selected";
          selectedValue2 = this.value;
        }
        subItemOptions += "<option " + selectedSubItem + " value='"+ this.value +"'>"+this.text+"</option>";
      });
      let selectSubItemHtml = "<select disabled onchange='subItemName(this, "+itemIndexValue+")' class='form-control select2 selectSubItem_"+itemIndexValue+" item_sub_item_id_"+itemIndexValue+"'>"+subItemOptions+"</select>";
      selectSubItemHtml += "<input class='sub_item_name_hidden_"+itemIndexValue+"' type='hidden' value='"+selectedValue2+"' name='item["+itemIndexValue+"][sub_item_id]' >";
      

      let selectHtml = "<select disabled indexValue='"+itemIndexValue+"' onchange='itemName(this, "+itemIndexValue+")' class='form-control select2 selectItem item_item_id_"+itemIndexValue+"'>"+itemOptions+"</select>";
      selectHtml += "<input class='item_name_hidden_"+itemIndexValue+"' type='hidden' value='"+selectedValue1+"' name='item["+itemIndexValue+"][item_id]' >";
      
      let itemHtml = "<div class='row itemRow'><div class='col-sm-2'><div class='form-group'>"+selectHtml+"<div class='item_item_id_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      itemHtml += "<div class='col-sm-2'><div class='form-group'>"+selectSubItemHtml+"<div class='item_sub_item_id_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][description]' type='text' value='"+itemDescription+"' class='form-control desc item_description_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_description_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][no_of_pkg]' type='number' value='"+itemNoOfPkt+"' class='form-control pkt item_no_of_pkg_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_no_of_pkg_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][unit]' type='number' value='"+itemUnit+"' class='form-control unit item_unit_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_unit_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][quantity]' type='number' value='"+itemQuantity+"' class='form-control qty item_quantity_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_quantity_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][rate]' type='number' value='"+itemRate+"' class='form-control rate item_rate_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_rate_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][per]' type='number' value='"+itemPer+"' class='form-control per item_per_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_per_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][amount]' type='number' value='"+itemAmount+"' class='form-control amount item_amount_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_amount_"+itemIndexValue+"-error-message error-message'></div></div></div>";

      itemHtml += "<div class='col-sm-2 ' style='display: flex;align-items: center;'>";
      itemHtml += "<button onclick='removeItems(this)' type='button' class='btn btn-danger float-right'><i class='fas fa-times'></i></button>&nbsp;";
      itemHtml += "<button onclick='editItems(this)' type='button' itemIndexValue='"+itemIndexValue+"' class='btn btn-danger float-right editItemsBtn_"+itemIndexValue+"'>Edit</button>&nbsp;";
      itemHtml += "<button style='display:none;'' itemIndexValue='' onclick='updateItems(this)' type='button' class='btn btn-info updateItemsBtn_"+itemIndexValue+"'><i class='fas fa-plus'></i> Update Item</button></div></div>";
      $('.itemDiv').prepend(itemHtml);
      $(".select2").each(function() {
        $(this).select2();
      });
      emptyItemFields();
      calculateTotal();
    }
  }

  function emptyItemErrors(index = ""){
    $(".item_item_id_"+index+"-error-message, .item_no_of_pkg_"+index+"-error-message, .item_quantity_"+index+"-error-message, .item_rate_"+index+"-error-message, .item_gst_"+index+"-error-message").html("");
  }

  function validateItems(itemIndexValue = ""){
    let valid = true;
    if($('.item_item_id_'+itemIndexValue).val() === ""){
      $('.item_item_id_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    // if($('.item_sub_item_id_'+itemIndexValue).val() === ""){
    //   $('.item_sub_item_id_'+itemIndexValue+'-error-message').html("This field is required!");
    //   valid = false;
    // }
    if($('.item_description_'+itemIndexValue).val() === ""){
      $('.item_description_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_no_of_pkg_'+itemIndexValue).val() === ""){
      $('.item_no_of_pkg_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_unit_'+itemIndexValue).val() === ""){
      $('.item_unit_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_quantity_'+itemIndexValue).val() === ""){
      $('.item_quantity_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_rate_'+itemIndexValue).val() === ""){
      $('.item_rate_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_per_'+itemIndexValue).val() === ""){
      $('.item_per_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_amount_'+itemIndexValue).val() === ""){
      $('.item_amount_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    return valid;
  }

  function emptyItemFields(){
    $('.item_item_id_').val("").trigger('change');
    $('.item_sub_item_id_').val("").trigger('change');
    $('.itemDescription').val("");
    $('.itemNoOfPkt').val("");
