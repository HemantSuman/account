<!-- Content Header (Page header) -->
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">List <%=extraVar['viewDirectory']%></h1>
      </div><!-- /.col -->
      <div class="col-sm-6">
        <a href="/admin/<%= extraVar.viewDirectory %>" class="btn btn-primary float-right">Back</a>
      </div><!-- /.col -->
    </div><!-- /.row -->
  </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    
    <div class="row">
      <div class="col-12">

        <div class="card">          
          <!-- <div class="card-header">
            <h3 class="card-title">DataTable with default features</h3>
          </div>-->
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
              <tr>
                <th>No.</th>
                <th>Item Name</th>
                <th>SubItem Name</th>
                <th>Opening</th>
                <th>Purchase(Today)</th>
                <th>Sale</th>
                <th>Sale(Today)</th>
                <!-- <th>Sale</th> -->
                <th>Remaining</th>
              </tr>
              </thead>
                <tbody>
                  <% if(extraVar.remainingStock.length > 0) { %>
                    <% extraVar.remainingStock.forEach(function(rows, index){ %>
                    <tr>
                      <td><%= ++index %></td>
                      <td><%= extraVar.itemKeyValue[rows.item_id] %></td>
                      <td><%= rows.type %></td>
                      <td><%= rows.oldIn %></td>
                      <td><%= rows.todayIn %></td>
                      <td><%= rows.oldOut %></td>
                      <td><%= rows.todayOut %></td>
                      <!-- <td><%= rows.sale %></td> -->
                      <td><%= rows.remaining %></td>
                    </tr>                
                    <% }); %>
                  <% } else { %>
                    <td colspan="13" class="text-center">No Record Found.</td>
                  <% } %>
                </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->

<script>
  $(function () {
    $("#example1").DataTable({
      "responsive": true,
      "autoWidth": false,
    });
  });
</script>
