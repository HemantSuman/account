<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

    <title>Stock Report</title>

    <link rel="stylesheet" type="text/css" href="css/style.css" />
    <style>
      
      body {
        font: 8px Georgia, serif;
      }
      #page-wrap {
         width: 100%;
        /*height: 800px;*/
        margin: 0 auto; 
        display: block; 
      }

      /* table {
        border-collapse: collapse;
      }
      #items table td,
      #items table th {
        border: 1px solid black;
        padding: 5px;
      } */      
      #items {
        clear: both;
        width: 100%;
        margin: 0px 0 0 0;
        /* height: 250px; */
        border-bottom: 1px #ccc solid;
        /* border: 1px solid black; */
      }
      #items th {
        height: 20px;
        background: #eee;
        width: 5px;
        overflow: hidden;
      }
      .hideextra {
        white-space: nowrap;
      }
      #items tr.item-row td {
        vertical-align: top;
      }
      #items td.description {
        width: 300px;
      }
      /* #items td.item-name {
        width: 175px;
      } */
      
      #items td.total-line {
        border-right: 0;
        text-align: right;
      }
      #items td.total-value {
        border-left: 0;
        padding: 5px;
      }
      #items td.balance {
        background: #eee;
      }
      #items td.blank {
        border: 0;
      }
      #items tr td {
        text-align: center;
      }
      .table0 {
        width: 99%;
        float: left;
        border: 1px #ccc solid;
        padding: 2px 2px;
        text-align: right;
        border-collapse: collapse;
        border-bottom: none;
      }
      .table0 tr td {
        padding: 5px 0;
      }
      .table1 {
        display: inline-block;
        width: 49%;
        float: left;
        border: 1px #ccc solid;
        padding: 2px;
        border-collapse: collapse;
        border-right: none;
      }
      .table1 tr td {
        padding: 2px 0;
      }
      .table2 {
        display: inline-block;
        width: 48%;
        float: left;
        border: 1px #ccc solid;
        font-size: 11px;
        padding: 2px;
        border-collapse: collapse;
        border-bottom: none;
      }
      .table3 {
        display: inline-block;
        width: 48%;
        float: left;
        border: 1px #ccc solid;
        padding: 2px;
        min-height: 70px;
        border-collapse: collapse;
        border-bottom: none;
      }
      .table4 {
        width: 100%;
        float: left;
        border: 1px #ccc solid;
        border-collapse: collapse;
      }
      .table4 tr td {
        border: 1px #ccc solid;
      }
      .table4 tr td {
        padding: 4px;
      }
      .noWrape {
        width: 30%;
      }
      #pageHeader {
        padding: 5px;
      }
      #pageFooter {
        padding: 5px;
      }
      .for-left {
        text-align: left !important;
      }
    </style>
  </head>

  <body>
    <div id="page-wrap" >
      <div style="min-height: 210px;border: 1px #ccc solid">
        <table id="items">
          <tr>
            <th>No.</th>
            <th>Item Name</th>
            <th>SubItem Name</th>
            <th>Opening</th>
            <th>Purchase(Today)</th>
            <th>Sale</th>
            <th>Sale(Today)</th>
            <!-- <th>Sale</th> -->
            <th>Remaining</th>
          </tr>
          <% if(extraVar.remainingStock.length > 0) { %>
            <% extraVar.remainingStock.forEach(function(rows, index){ %>

          <tr class="item-row">
            <td><%= ++index %></td>
            <td><%= extraVar.itemKeyValue[rows.item_id] %></td>
            <td></td>
            <td><%= rows.type %></td>
            <td><%= rows.oldIn %></td>
            <td><%= rows.todayIn %></td>
            <td><%= rows.oldOut %></td>
            <td><%= rows.todayOut %></td>
            <!-- <td><%= rows.sale %></td> -->
            <td><%= rows.remaining %></td>
          </tr>
          <% }); %> <% } else { %>
          <tr class="item-row">
            <td colspan="8" class="text-center">No Record Found.</td>
          </tr>
          <% } %>
        </table>
      </div>
    </div>

