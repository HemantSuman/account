                        </div>                        
                      </div>
                    </div>                               
                  </div>                    
                </div>
              </div>

              <div class="row">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                  <div class="card card-primary">
                    <div class="card-header">
                      <h3 class="card-title"></h3>
                    </div>
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-6">
                          <div class="form-group">
                            <label for="">Taxable value</label>
                            <input readonly name="taxable_value" type="text" class="form-control taxableValue" placeholder="">
                            <div class="taxable_value-error-message error-message"></div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-sm-6">
                          <div class="form-group">
                            <label for="">GST Amount</label>
                            <input name="gst_amt" type="text" class="form-control totalGST" placeholder="">
                            <div class="gst_amt-error-message error-message"></div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-sm-2">
                          <div class="form-group">
                            <div class="custom-control custom-checkbox">
                              <input name="tcs_check" type="checkbox" class="custom-control-input tcs_check" id="tcsCheck" >
                              <label for="tcsCheck" class="custom-control-label" >Is TCS</label>
                            </div>
                          </div>
                        </div>
                        <div class="col-sm-6">
                          <div class="form-group">
                            <label for="">TCS</label>
                            <input name="tcs" disabled type="text" class="form-control tcs_value" placeholder="">
                            <div class="tcs-error-message error-message"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                    <div class="custom-control custom-checkbox">
                      <input name="status" type="checkbox" checked class="custom-control-input" id="statusCheck">
                      <label for="statusCheck" class="custom-control-label" >Status</label>
                      <div class="status-error-message error-message"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
              <button type="submit" class="btn btn-primary submitBtn">Submit</button>
            </div>
          </form>
        </div>
        <!-- /.card -->
        <span style="display: none;" id="itemsObj"><%= JSON.stringify(extraVar.results.items); %></span>
      </div>
      <!--/.col (left) -->
    </div>
    <!-- /.row -->
  </div><!-- /.container-fluid -->
</section>
<!-- Summernote -->
<script src="/admin/plugins/summernote/summernote-bs4.min.js"></script>

<script type="text/javascript">

  $('.date1').daterangepicker({
    singleDatePicker: true,
    locale: {
        format: 'DD-MM-YYYY'
      }
  });
  $('.date2').daterangepicker({
    singleDatePicker: true,
    startDate: moment().add(1, "month"),
    locale: {
        format: 'DD-MM-YYYY'
      }
  });

  $(document).on("click", ".tcs_check", function(){
    if($(this).is(":checked")){
      $(".tcs_value").attr("disabled", false);
    } else {
      $(".tcs_value").attr("disabled", true);
    }
  });

  function addMoreItems(){
    emptyItemErrors();

    let selectItem = $('.item_item_id_').val();
    let itemNoOfPkt = $('.itemNoOfPkt').val();
    let itemQuantity = $('.itemQuantity').val();
    let itemRate = $('.itemRate').val();
    let itemGst = $('.itemGst').val();
    let valid = validateItems();

    if(valid){
      let itemIndexValue = parseInt($('.itemIndexValue').val()) + 1;
      $('.itemIndexValue').val(itemIndexValue); 
      
      let itemsObj = JSON.parse($("#itemsObj").html());
      let itemOptions = "";
      let selectedValue1 = "";
      itemsObj.map(function(data) {
        let selected = "";
        if(data.id == selectItem){
          selected = "selected";
          selectedValue1 = data.id;
        }
        itemOptions += "<option " + selected + " value='"+ data.id +"'>"+data.item_name+"</option>";
      });

      let subItemOptions = "";
      let selectedValue2 = "";
      $(".selectSubItem  option").each(function(){
        let selectedSubItem = "";
        if(this.value == $(".selectSubItem").val()){
          selectedSubItem = "selected";
          selectedValue2 = this.value;
        }
        subItemOptions += "<option " + selectedSubItem + " value='"+ this.value +"'>"+this.text+"</option>";
      });
      let selectSubItemHtml = "<select disabled onchange='subItemName(this, "+itemIndexValue+")' class='form-control select2 selectSubItem_"+itemIndexValue+" item_sub_item_id_"+itemIndexValue+"'>"+subItemOptions+"</select>";
      selectSubItemHtml += "<input class='sub_item_name_hidden_"+itemIndexValue+"' type='hidden' value='"+selectedValue2+"' name='item["+itemIndexValue+"][sub_item_id]' >";
      

      let selectHtml = "<select disabled indexValue='"+itemIndexValue+"' onchange='itemName(this, "+itemIndexValue+")' class='form-control select2 selectItem item_item_id_"+itemIndexValue+"'>"+itemOptions+"</select>";
      selectHtml += "<input class='item_name_hidden_"+itemIndexValue+"' type='hidden' value='"+selectedValue1+"' name='item["+itemIndexValue+"][item_id]' >";
      
      let itemHtml = "<div class='row itemRow'><div class='col-sm-2'><div class='form-group'>"+selectHtml+"<div class='item_item_id_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      itemHtml += "<div class='col-sm-2'><div class='form-group'>"+selectSubItemHtml+"<div class='item_sub_item_id_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][no_of_pkg]' type='number' value='"+itemNoOfPkt+"' class='form-control pkt item_no_of_pkg_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_no_of_pkg_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][quantity]' type='number' value='"+itemQuantity+"' class='form-control qty item_quantity_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_quantity_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][rate]' type='number' value='"+itemRate+"' class='form-control rate item_rate_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_rate_"+itemIndexValue+"-error-message error-message'></div></div></div>";
      
      itemHtml += "<div class='col-sm-1'><div class='form-group'>";
      itemHtml += "<input readonly name='item["+itemIndexValue+"][gst]' type='number' value='"+itemGst+"' class='form-control gst item_gst_"+itemIndexValue+"' placeholder=''>";
      itemHtml += "<div class='item_gst_"+itemIndexValue+"-error-message error-message'></div></div></div>";

      itemHtml += "<div class='col-sm-2 ' style='display: flex;align-items: center;'>";
      itemHtml += "<button onclick='removeItems(this)' type='button' class='btn btn-danger float-right'><i class='fas fa-times'></i></button>&nbsp;";
      itemHtml += "<button onclick='editItems(this)' type='button' itemIndexValue='"+itemIndexValue+"' class='btn btn-danger float-right editItemsBtn_"+itemIndexValue+"'>Edit</button>&nbsp;";
      itemHtml += "<button style='display:none;'' itemIndexValue='' onclick='updateItems(this)' type='button' class='btn btn-info updateItemsBtn_"+itemIndexValue+"'><i class='fas fa-plus'></i> Update Item</button></div></div>";
      $('.itemDiv').prepend(itemHtml);
      $(".select2").each(function() {
        $(this).select2();
      });
      emptyItemFields();
      calculateTotal();
    }
  }

  function emptyItemErrors(index = ""){
    $(".item_item_id_"+index+"-error-message, .item_no_of_pkg_"+index+"-error-message, .item_quantity_"+index+"-error-message, .item_rate_"+index+"-error-message, .item_gst_"+index+"-error-message").html("");
  }

  function validateItems(itemIndexValue = ""){
    let valid = true;
    if($('.item_item_id_'+itemIndexValue).val() === ""){
      $('.item_item_id_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    // if($('.item_sub_item_id_'+itemIndexValue).val() === ""){
    //   $('.item_sub_item_id_'+itemIndexValue+'-error-message').html("This field is required!");
    //   valid = false;
    // }
    if($('.item_no_of_pkg_'+itemIndexValue).val() === ""){
      $('.item_no_of_pkg_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_quantity_'+itemIndexValue).val() === ""){
      $('.item_quantity_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_rate_'+itemIndexValue).val() === ""){
      $('.item_rate_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    if($('.item_gst_'+itemIndexValue).val() === ""){
      $('.item_gst_'+itemIndexValue+'-error-message').html("This field is required!");
      valid = false;
    }
    return valid;
  }

  function updateItems(thisVar){
    
    let itemIndexValue =  $(thisVar).attr("itemIndexValue");
    emptyItemErrors(itemIndexValue);
    let valid = validateItems(itemIndexValue);
    if(valid){
      $('.item_item_id_'+itemIndexValue).attr("disabled", true);
      $('.item_sub_item_id_'+itemIndexValue).attr("disabled", true);
      $('.item_no_of_pkg_'+itemIndexValue).attr("readonly", true);
      $('.item_quantity_'+itemIndexValue).attr("readonly", true);
      $('.item_rate_'+itemIndexValue).attr("readonly", true);
      $('.item_gst_'+itemIndexValue).attr("readonly", true);
      $('.editItemsBtn_'+itemIndexValue).show();
      $('.updateItemsBtn_'+itemIndexValue).hide();
      calculateTotal();
      emptyItemFields();
    }    
  }

  function itemName(thisObj, index){
    $(".item_name_hidden_"+index).val($(thisObj).val());
  }

  function subItemName(thisObj, index){
    $(".sub_item_name_hidden_"+index).val($(thisObj).val());
  }

  function editItems(thisVar){

    let itemIndexValue =  $(thisVar).attr("itemIndexValue");
    $('.item_item_id_'+itemIndexValue).attr("disabled", false);
    $('.item_sub_item_id_'+itemIndexValue).attr("disabled", false);
    $('.item_no_of_pkg_'+itemIndexValue).attr("readonly", false);
    $('.item_quantity_'+itemIndexValue).attr("readonly", false);
    $('.item_rate_'+itemIndexValue).attr("readonly", false);
    $('.item_gst_'+itemIndexValue).attr("readonly", false);

    $('.editItemsBtn_'+itemIndexValue).hide();
    $('.updateItemsBtn_'+itemIndexValue).show();
    $('.updateItemsBtn_'+itemIndexValue).attr("itemIndexValue", itemIndexValue);
  }

  function emptyItemFields(){
    $('.item_item_id_').val("").trigger('change');
    $('.item_sub_item_id_').val("").trigger('change');
    $('.itemNoOfPkt').val("");
    $('.itemQuantity').val("");
    $('.itemRate').val("");
    $('.itemGst').val("");
  }

  function removeItems(thisVar){
    $(thisVar).parents('.itemRow').remove();
    calculateTotal();
  }

  function calculateTotal(){
    let totalPrice = 0;
    let totalGST = 0;
    $(".itemRow").each(function(index, val){
      let rate = parseFloat($(".rate", val).val());
      let qty = parseFloat($(".qty", val).val());
      let gst = parseFloat($(".gst", val).val());
      totalPrice = parseFloat(totalPrice) + parseFloat(rate * qty);
      let gstPerItem = ((rate * qty) * gst) / 100;
      totalGST = totalGST + gstPerItem;
      
      console.log(totalPrice, gstPerItem, totalGST)
    });
    $(".taxableValue").val(totalPrice);
    $(".totalGST").val(totalGST);
  }

  $(document).ready(function() {
    // $.notify(data.message, { className:"success",position:"bottom right" });
    var formId = 'formId';
    $(document).on('click', '.submitBtn', function(){
      $('.error-message').html('');
      $('#'+formId).validate({
        rules: {
          title: {
            // required: true,
          }
        },
        messages: {
          title: {
            required: "This field is required!",
          },
        },
        errorElement: 'span',
        errorPlacement: function (error, element) {
          error.addClass('invalid-feedback');
          element.closest('.form-group').append(error);
        },
        highlight: function (element, errorClass, validClass) {
          $(element).addClass('is-invalid');
        },
        unhighlight: function (element, errorClass, validClass) {
          $(element).removeClass('is-invalid');
        },
        submitHandler: function(form) {

          var form = $('#'+formId);
          errorFieldObj = [];
          $.ajax({
            url: $('#'+formId).attr('action'),
            type: 'POST',
            dataType: "json",
            data: new FormData(form[0]),
            processData: false,
            contentType: false,
            cache: false,
            success: function (data, status)
            {
              if (data.status) {
                window.location.href = data.url;
              } else {
                $.notify("Somthing went wrong, Please try again!", { className:"error", position:"bottom right" });
              }
            },
            error: function (xhr, desc, err)
            {
              xhr.responseJSON.data.map(function(val){
                console.log(val)
                if(!errorFieldObj.includes(val.path)){
                  
                  $('.'+val.path+'-error-message').html(val.message)
                  errorFieldObj.push(val.path)
                }
              })

            }
          })
        }
      });
    });
  });
</script>