  function calculateTotal(){
    let totalPrice = 0;
    let totalGST = 0;
    $(".itemRow").each(function(index, val){
      let rate = parseFloat($(".rate", val).val());
      let qty = parseFloat($(".qty", val).val());
      let gst = parseFloat($(".gst", val).val());
      totalPrice = parseFloat(totalPrice) + parseFloat(rate * qty);
      let gstPerItem = ((rate * qty) * gst) / 100;
      $(".gstAmount", val).val(gstPerItem);
      totalGST = totalGST + gstPerItem;
      $(".itemValue", val).val(parseFloat(rate * qty) + parseFloat(gstPerItem))
      
    });
    $(".taxableValue").val(totalPrice);
    $(".totalGST").val(totalGST);

    let total_value = parseFloat(totalPrice + totalGST);

    let buyerGstAmt = $(".buyerAccount option:selected").attr('gstin');
    if(typeof buyerGstAmt !== "undefined"){
      let buyerGst = buyerGstAmt.substring(0, 2);
      let sessionObj = JSON.parse($("#sessionObj").html());
      let userGst = sessionObj.session.user.Company.gstin.substring(0, 2);
      console.log("$$", userGst)
      if(buyerGst == userGst){

        $(".sameStates").show();
        $(".diffStates").hide();
        $(".cgstAmount").val(totalGST / 2);
        $(".sgstAmount").val(totalGST / 2);
        $(".igstAmount").val("");
      } else {
        $(".igstAmount").val(totalGST);
        $(".cgstAmount").val("");
        $(".sgstAmount").val("");
        $(".diffStates").show();
        $(".sameStates").hide();
      }
    }
    
    let withTcs = 0;
    let otherTaxInfo = "";
    if($(".tcs_check").is(":checked")){
      let otherTax = 0;
      $(".tcs_value option:selected").each(function(val, index){
        otherTax = parseFloat(otherTax) + parseFloat($(this).attr("percentage"));
        otherTaxInfo += $(this).text() + "-"+ parseFloat($(this).attr("percentage"))+"%: " + parseFloat((totalPrice * parseFloat($(this).attr("percentage"))) / 100) + ", ";
      })
      withTcs = (totalPrice * otherTax) / 100;
      $(".otherTaxInfo").html(otherTaxInfo);
      total_value = parseFloat(total_value + withTcs);
    } else {
      $(".otherTaxInfo").html("");
    }
    $(".total_value").val(total_value);
  }

  $(document).ready(function() {
    // $.notify(data.message, { className:"success",position:"bottom right" });
    var formId = 'formId';
    $(document).on('click', '.submitBtn', function(){
      $('.error-message').html('');
      $('#'+formId).validate({
        rules: {
          name: {
            // required: true,
          }
        },
        messages: {
          name: {
            required: "This field is required!",
          },
        },
        errorElement: 'span',
        errorPlacement: function (error, element) {
          error.addClass('invalid-feedback');
          element.closest('.form-group').append(error);
        },
        highlight: function (element, errorClass, validClass) {
          $(element).addClass('is-invalid');
        },
        unhighlight: function (element, errorClass, validClass) {
          $(element).removeClass('is-invalid');
        },
        submitHandler: function(form) {

          var form = $('#'+formId);
          errorFieldObj = [];
          $.ajax({
            url: $('#'+formId).attr('action'),
            type: 'POST',
            dataType: "json",
            data: new FormData(form[0]),
            processData: false,
            contentType: false,
            cache: false,
            success: function (data, status)
            {
              if (data.status) {
                window.location.href = data.url;
              }
            },
            error: function (xhr, desc, err)
            {
              xhr.responseJSON.data.map(function(val){
                console.log(val)
                if(!errorFieldObj.includes(val.path)){
                  
                  $('.'+val.path+'-error-message').html(val.message)
                  errorFieldObj.push(val.path)
                }
              })

            }
          })
        }
      });
    });
  });
